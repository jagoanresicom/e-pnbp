@*@model List<Pnbp.Entities.StatistikPenerimaan>*@

@{
    ViewBag.Judul = "Rincian Realisasi Penerimaan";
    var alokasi0 = ViewBag.alokasi0;
    var alokasi1 = ViewBag.alokasi1;
    var kantorId = ViewBag.kantorId;
    var tahun = ViewBag.tahun;
    var bulan = ViewBag.bulan;
    var penerimaan = ViewBag.penerimaan;
}

<style>
    td.numeric, th.numeric {
        text-align: right;
    }

    .tdcenter {
        text-align: center;
    }
</style>

@*<link href='@Url.Content("~/resources/css/table.css")' rel="stylesheet">*@
<h1>Penerimaan Perbandingan</h1>
<div class="row" style="margin-bottom: 20px;">
    <div class="col-md-12" style="margin-bottom: 20px;">
        <a class="btn btn-default" href="@Url.Action("RealisasiPenerimaan", "Penerimaan")">
            Kembali
        </a>
    </div>
    <div class="col-md-12">
        <table>
            <tr>
                <th>Nama Satker</th>
                <td>: @penerimaan.namakantor</td>
            </tr>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Belum Teralokasi</strong>
            </div>
            <div class="panel-body">
                <table id="tbl-alokasi0" class="table table-striped table-bordered dt-responsive nowrap" style="clear: both; border-collapse: collapse; width: 100%;">
                    <thead>
                        <tr>
                            <th class="tdcenter">Tanggal Penerimaan</th>
                            <th class="tdcenter">Kode Billing</th>
                            <th class="tdcenter">Nomor Berkas</th>
                            <th class="tdcenter">Tahun Berkas</th>
                            <th class="tdcenter">Kode Penerimaan</th>
                            <th class="tdcenter">Nama Penerimaan</th>
                            <th class="tdcenter">Jumlah</th>
                            <th class="tdcenter">Nilai Akhir</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Sudah Teralokasi</strong>
            </div>
            <div class="panel-body">
                <table id="tbl-alokasi1" class="table table-striped table-bordered dt-responsive nowrap" style="clear: both; border-collapse: collapse; width: 100%;">
                    <thead>
                        <tr>
                            <th class="tdcenter">Tanggal Penerimaan</th>
                            <th class="tdcenter">Kode Billing</th>
                            <th class="tdcenter">Nomor Berkas</th>
                            <th class="tdcenter">Tahun Berkas</th>
                            <th class="tdcenter">Kode Penerimaan</th>
                            <th class="tdcenter">Nama Penerimaan</th>
                            <th class="tdcenter">Jumlah</th>
                            <th class="tdcenter">Nilai Akhir</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <script type="text/javascript">
    var kantorId = '@kantorId'
    var tahun = '@tahun';
        var bulan = '@bulan';

    $(document).ready(function () {
        let tblAlokasi0 = $('#tbl-alokasi0').DataTable({
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": "/penerimaan/RealisasiPenerimaanPerbandinganSatkerDt?kantorId=" + kantorId + "&tahun=" + tahun + "&bulan=" + bulan + "&statusAlokasi=false",
                "type": "POST"
            },
            "columns": [
                {
                    "data": "tanggal"
                },
                {
                    "data": "kodebilling"
                },
                {
                    "data": "nomorberkas"
                },
                {
                    "data": "tahunberkas"
                },
                {
                    "data": "kodepenerimaan"
                },
                {
                    "data": "namaprogram"
                },
                {
                    "data": "jumlah"
                },
                {
                    "data": "nilaiakhir"
                }
            ]

        });
        let tblAlokasi1 = $('#tbl-alokasi1').DataTable({
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": "/penerimaan/RealisasiPenerimaanPerbandinganSatkerDt?kantorId=" + kantorId + "&tahun=" + tahun + "&bulan=" + bulan + "&statusAlokasi=true",
                "type": "POST"
            },
            "columns": [
                {
                    "data": "tanggal"
                },
                {
                    "data": "kodebilling"
                },
                {
                    "data": "nomorberkas"
                },
                {
                    "data": "tahunberkas"
                },
                {
                    "data": "kodepenerimaan"
                },
                {
                    "data": "namaprogram"
                },
                {
                    "data": "jumlah"
                },
                {
                    "data": "nilaiakhir"
                }
            ]

        });
    });
    </script>
