@*@model List<Pnbp.Entities.StatistikPenerimaan>*@

@{
    ViewBag.Judul = "Rincian Realisasi Penerimaan";
    var alokasi0 = ViewBag.alokasi0;
    var alokasi1 = ViewBag.alokasi1;
}

<style>
    td.numeric, th.numeric {
        text-align: right;
    }

    .tdcenter {
        text-align: center;
    }
</style>

@*<link href='@Url.Content("~/resources/css/table.css")' rel="stylesheet">*@
<h1>Penerimaan Perbandingan</h1>
<div class="row">
    <div class="col-md-6">
        <table id="tbl-alokasi0" class="table table-striped table-bordered dt-responsive nowrap" style="clear: both; border-collapse: collapse; width: 100%;">
            <thead>
                <tr>
                    <th class="tdcenter">Kode Satker</th>
                    <th class="tdcenter">Nama Prosedur</th>
                    <th class="tdcenter">Jumlah</th>
                    <th class="tdcenter">Nilai Akhir</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in alokasi0)
                {
                    <tr>
                        <td>@item.kodesatker</td>
                        <td>@item.namaprosedur</td>
                        <td>@item.jumlah</td>
                        <td>@item.nilaiakhir</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <table id="tbl-alokasi1" class="table table-striped table-bordered dt-responsive nowrap" style="clear: both; border-collapse: collapse; width: 100%;">
            <thead>
                <tr>
                    <th class="tdcenter">Kode Satker</th>
                    <th class="tdcenter">Nama Prosedur</th>
                    <th class="tdcenter">Jumlah</th>
                    <th class="tdcenter">Nilai Akhir</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in alokasi1)
                {
                    <tr>
                        <td>@item.kodesatker</td>
                        <td>@item.namaprosedur</td>
                        <td>@item.jumlah</td>
                        <td>@item.nilaiakhir</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        let tblAlokasi0 = $('#tbl-alokasi0').DataTable();
        let tblAlokasi1 = $('#tbl-alokasi1').DataTable();
    });
</script>