@model Pnbp.Entities.FormAlokasi

<style type="text/css">
    .back-to-top {
        cursor: pointer;
        position: fixed;
        bottom: 20px;
        right: 20px;
        display: none;
    }

    th {
        text-align: center;
    }
</style>
<script src="../resources/js/jquery.validate.min.js" type="text/javascript"></script>
<script src="../resources/js/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>

<script src="../resources/js/moment.js"></script>
<script src="../resources/js/id.js"></script>
<script src="../resources/js/bootstrap-datetimepicker.min.js"></script>

<script src="../resources/js/polyfiller.js"></script>

<link href="../resources/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="../resources/js/jquery.dataTables.min.js"></script>
<script src="../resources/js/dataTables.bootstrap.min.js"></script>

<div id="dynamic_content">
    <div class="page-title">
        <div class="title_left">
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Alokasi Non Operasional</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form class="form-horizontal form-label-left" id="frmalok" method="post">
                        @Html.HiddenFor(Model => Model.JenisAlokasi, new { id = "JenisAlokasi" })
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12 col-md-offset-2 col-sm-offset-2">Nilai Alokasi : </label>
                            <div class="col-md-4 col-sm-4 col-xs-12 hide-inputbtns">
                                @Html.TextBoxFor(model => model.InputAlokasi, new { @class = "form-control", @type = "number" })
                                @Html.ValidationMessageFor(model => model.InputAlokasi, "", new { @class = "error" })
                            </div>
                        </div>
                    </form>
                </div>
                <div style="text-align:center;">
                    <div style="text-align:center;">
                        <button id="btncek" type="button" class="btn btn-info"><span class="fa fa-search"></span> Cek Proses </button>
                        @*<button id="btnprioritas" type="button" class="btn btn-info"><span class="fa fa-search"></span> Cek Prioritas </button>*@
                        <button id="btngettest" type="button" class="btn btn-info" style="display:none;"><span class="fa fa-search"></span> Cek Alokasi </button>
                        <span>|</span>
                        <button id="btnalok" type="submit" form="frmalok" class="btn btn-primary" style="margin-left:5px;"><span class="fa fa-magic"></span> Alokasi </button>
                        <button id="btnreset" type="button" class="btn btn-danger"><span class="fa fa-refresh"></span> Hapus </button>
                        <button id="btnsimpan" type="button" class="btn btn-success"><span class="fa fa-floppy-o"></span> Simpan </button>
                        @using (Html.BeginForm("ExportNON", "Alokasi", FormMethod.Post))
                        {
                            <button type="submit" class="btn btn-success"><span class="fa fa-floppy-o"></span> Excel </button>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div id="tableholder">
    </div>
</div>

<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" title="" data-toggle="tooltip" data-placement="left"><span class="glyphicon glyphicon-chevron-up"></span></a>

<script type="text/javascript">
    (function (a) { a.createModal = function (b) { defaults = { title: "", message: "Your Message Goes Here!", closeButton: true, scrollable: false }; var b = a.extend({}, defaults, b); var c = (b.scrollable === true) ? 'style="max-height: 420px;overflow-y: auto;"' : ""; html = '<div class="modal fade" id="myModal">'; html += '<div class="modal-dialog">'; html += '<div class="modal-content">'; html += '<div class="modal-header">'; html += '<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>'; if (b.title.length > 0) { html += '<h4 class="modal-title">' + b.title + "</h4>" } html += "</div>"; html += '<div class="modal-body" ' + c + ">"; html += b.message; html += "</div>"; html += '<div class="modal-footer">'; if (b.closeButton === true) { html += '<button type="button" class="btn btn-primary" data-dismiss="modal" id="btn-ok">OK</button>' } html += "</div>"; html += "</div>"; html += "</div>"; html += "</div>"; a("body").prepend(html); a("#myModal").modal().on("hidden.bs.modal", function () { a(this).remove() }) } })(jQuery);

    function showmsg(judul, isi) {
        $.createModal({
            title: judul,
            message: isi,
            closeButton: true,
            scrollable: false
        });
        return false;
    };

    function cekalokasi() {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("CekJobs", "Alokasi")',
            data: { pTipe: "NONOPS" },
            success: function (data, textStatus, XMLHttpRequest) {
                if (data == 'noresults') {
                    showmsg('Status', 'Tidak ada data yang ditemukan');
                }
                else {
                    //$('#actTabs a[href="#tab2"]').tab("show");
                    //$('#tab2').html(data);
                    $('#tableholder').html(data);
                    //console.log(data);
                }
                $.unblockUI();
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                //console.log(XMLHttpRequest, textStatus, errorThrown);
                $.unblockUI();
            }
        });
    };

    function cekprioritas() {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("CekPrioritas", "Alokasi")',
            data: { pTipe: "NONOPS" },
            success: function (data, textStatus, XMLHttpRequest) {
                if (data == 'noresults') {
                    showmsg('Status', 'Tidak ada data yang ditemukan');
                }
                else {
                    //$('#actTabs a[href="#tab3"]').tab("show");
                    //$('#tab3').html(data);
                    $('#tableholder').html(data);
                    //console.log(data);
                }
                $.unblockUI();
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                //console.log(XMLHttpRequest, textStatus, errorThrown);
                $.unblockUI();
            }
        });
    };

    $(document).ready(function () {
        $('#JenisAlokasi').val("NONOPS");

        $(window).scroll(function () {
            if ($(this).scrollTop() > 50) {
                $('#back-to-top').fadeIn();
            } else {
                $('#back-to-top').fadeOut();
            }
        });
        // scroll body to 0px on click
        $('#back-to-top').click(function () {
            $('#back-to-top').tooltip('hide');
            $('body,html').animate({
                scrollTop: 0
            }, 800);
            return false;
        });

        $('#back-to-top').tooltip('show');

    });

    $("#frmalok").submit(function (e) {
        if ($("#frmalok").valid()) {
            var checkvar = $("#InputAlokasi").val();
            if (checkvar != "") {
                console.log('valid');
                formToPost = $('#frmalok');
                $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("AllocationAsync", "Alokasi")',
                    data: $('#frmalok').serialize(),
                    success: function (data, textStatus, XMLHttpRequest) {

                        if (data == 'noresults') {
                            showmsg('Status', 'Tidak ada data yang ditemukan');
                        }
                        else {
                            showmsg('Informasi', '<h4 style="text-align:center;">Alokasi sedang berjalan. Silahkan cek proses.</h4>');
                            console.log('Calculate is Running.');
                        }
                        $.unblockUI();
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) { $.unblockUI(); }
                });
            }
            else {
                showmsg('Perhatian!', '<h4 style="text-align:center;">Nilai input alokasi kosong.</h4>');
            }
        }
        e.preventDefault();
        return false;
    });

    $("#btncek").click(function (e) {
        console.log('btncek');
        cekalokasi();
    });

    $("#btnprioritas").click(function (e) {
        console.log('btnprioritas');
        cekprioritas();
    });

    $("#btngettest").click(function (e) {
        formToPost = $('#frmalok');
            $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GetDaftarAlokasi", "Alokasi")',
                data: $('#frmalok').serialize(),
                success: function (data, textStatus, XMLHttpRequest) {
                    console.log(data);
                    if (data == 'noresults') {
                        showmsg('Status', 'Tidak ada data yang ditemukan');
                        $.unblockUI();
                    }
                    else {                        
                        $('#alokasirows').html(data);
                        $.unblockUI();
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    console.log(XMLHttpRequest, textStatus, errorThrown);
                    $.unblockUI();
                }
            });
    });

    $("#btnreset").click(function (e) {
        console.log('btnreset');
        $.ajax({
            type: 'POST',
            url: '@Url.Action("ResetAllocationAsync", "Alokasi")',
            data: $('#frmalok').serialize(),
            success: function (data, textStatus, XMLHttpRequest) {
                if (data == 'noresults') {
                    showmsg('Status', 'Tidak ada data yang ditemukan');
                }
                else {
                    showmsg('Informasi', '<h4 style="text-align:center;">Hapus data sedang diproses. Silahkan cek proses.</h4>');
                    $('#InputAlokasi').val(data.Dapatalokasi);
                    console.log('Reset Allocation is Running.');
                }
                $.unblockUI();
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) { $.unblockUI(); }
        });
    });

    $("#btnsimpan").click(function (e) {
        console.log('btnsimpan');
         $.ajax({
            type: 'POST',
            url: '@Url.Action("SaveAllocationAsync", "Alokasi")',
            data: $('#frmalok').serialize(),
            success: function (data, textStatus, XMLHttpRequest) {

                if (data == 'noresults') {
                    showmsg('Status', 'Tidak ada data yang ditemukan');
                }
                else {
                    showmsg('Informasi', '<h4 style="text-align:center;">Simpan alokasi sedang berjalan. Silahkan cek proses.</h4>');
                    console.log('Save Allocation is Running.');
                }
                $.unblockUI();
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) { $.unblockUI(); }
        });
    });

    //format masking input a
    webshims.setOptions('forms-ext', {
        replaceUI: 'auto',
        types: 'number'
    });
    webshims.polyfill('forms forms-ext');

</script>

