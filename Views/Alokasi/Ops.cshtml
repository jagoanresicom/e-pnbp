<script type="text/javascript">
    (function (a) { a.createModal = function (b) { defaults = { title: "", message: "Your Message Goes Here!", closeButton: true, scrollable: false }; var b = a.extend({}, defaults, b); var c = (b.scrollable === true) ? 'style="max-height: 420px;overflow-y: auto;"' : ""; html = '<div class="modal fade" id="myModal">'; html += '<div class="modal-dialog">'; html += '<div class="modal-content">'; html += '<div class="modal-header">'; html += '<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>'; if (b.title.length > 0) { html += '<h4 class="modal-title">' + b.title + "</h4>" } html += "</div>"; html += '<div class="modal-body" ' + c + ">"; html += b.message; html += "</div>"; html += '<div class="modal-footer">'; if (b.closeButton === true) { html += '<button type="button" class="btn btn-primary" data-dismiss="modal" id="btn-ok">OK</button>' } html += "</div>"; html += "</div>"; html += "</div>"; html += "</div>"; a("body").prepend(html); a("#myModal").modal().on("hidden.bs.modal", function () { a(this).remove() }) } })(jQuery);

    function showmsg(judul, isi) {
        $.createModal({
            title: judul,
            message: isi,
            closeButton: true,
            scrollable: false
        });
        return false;
    };

    function cekalokasi() {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("CekJobs", "Alokasi")',
            data: { pTipe: "OPS" },
            success: function (data, textStatus, XMLHttpRequest) {
                if (data == 'noresults') {
                    showmsg('Status', 'Tidak ada data yang ditemukan');
                }
                else {
                    $('#actTabs a[href="#tab2"]').tab("show");
                    $('#tab2').html(data);
                    //console.log(data);
                }
                $.unblockUI();
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                //console.log(XMLHttpRequest, textStatus, errorThrown);
                $.unblockUI();
            }
        });
    };

    $(document).ready(function () {
        $('#JenisAlokasi').val("OPS");
        //$('#btnalok').prop("disabled", true);
        //$('#btnreset').prop("disabled", true);
        //$('#btnload').prop("disabled", true);
        //$('#btnsimpan').prop("disabled", true);
        $('.select2_single').select2({ width: 'resolve' });
        $('#Tglpenerimaan').datetimepicker({
            format: 'DD/MM/YYYY',
            locale: 'id',
        });

        $(window).scroll(function () {
            if ($(this).scrollTop() > 50) {
                $('#back-to-top').fadeIn();
            } else {
                $('#back-to-top').fadeOut();
            }
        });
        // scroll body to 0px on click
        $('#back-to-top').click(function () {
            $('#back-to-top').tooltip('hide');
            $('body,html').animate({
                scrollTop: 0
            }, 800);
            return false;
        });

        $('#back-to-top').tooltip('show');

    });

    $("#frmalok").submit(function (e) {
        if ($("#frmalok").valid()) {
            resetInfiniteScroll();
            formToPost = $('#frmalok');
            $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
            $.ajax({
                type: 'POST',
                url: '@Url.Action("CalculateAsync", "Alokasi")',
                data: $('#frmalok').serialize(),
                success: function (data, textStatus, XMLHttpRequest) {
                    if (data == 'noresults') {
                        showmsg('Status', 'Tidak ada data yang ditemukan');
                    }
                    else {
                        showmsg('Informasi', '<h4 style="text-align:center;">Kalkulasi sedang berjalan. Silahkan cek proses.</h4>');
                        $('#btnalok').prop("disabled", false);
                        console.log('Calculate is Running.');
                    }
                    $.unblockUI();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) { $.unblockUI(); }
            });
        }
        e.preventDefault();
        return false;
    });

    $("#btncek").click(function (e) {
        console.log('btncek');
        cekalokasi();
    });

    $("#btnalok").click(function (e) {
        console.log('btnalok');
        $.ajax({
            type: 'POST',
            url: '@Url.Action("AllocationAsync", "Alokasi")',
            data: $('#frmalok').serialize(),
            success: function (data, textStatus, XMLHttpRequest) {
                if (data == 'noresults') {
                    showmsg('Status', 'Tidak ada data yang ditemukan');
                }
                else {
                    showmsg('Informasi', '<h4 style="text-align:center;">Alokasi sedang berjalan. Silahkan cek proses.</h4>');
                    $('#btnalok').prop("disabled", false);
                    console.log('Alokasi is Running.');
                    //$('#btnreset').prop("disabled", false);
                    //$('#btnsimpan').prop("disabled", false);
                }
                $.unblockUI();
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) { $.unblockUI(); }
        });
    });

    $("#btnreset").click(function (e) {
        console.log('btnreset');
        $.ajax({
            type: 'POST',
            url: '@Url.Action("ResetAllocationAsync", "Alokasi")',
            data: $('#frmalok').serialize(),
            success: function (data, textStatus, XMLHttpRequest) {
                if (data == 'noresults') {
                    showmsg('Status', 'Tidak ada data yang ditemukan');
                }
                else {
                    showmsg('Informasi', '<h4 style="text-align:center;">Hapus data sedang diproses. Silahkan cek proses.</h4>');
                    //$('#btnalok').prop("disabled", false);
                    console.log('Reset Allocation is Running.');
                }
                $.unblockUI();
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) { $.unblockUI(); }
        });
    });

    $("#btnsimpan").click(function (e) {
        console.log('btnsimpan');
         $.ajax({
            type: 'POST',
            url: '@Url.Action("SaveAllocationAsync", "Alokasi")',
            data: $('#frmalok').serialize(),
            success: function (data, textStatus, XMLHttpRequest) {

                if (data == 'noresults') {
                    showmsg('Status', 'Tidak ada data yang ditemukan');
                }
                else {
                    showmsg('Informasi', '<h4 style="text-align:center;">Simpan alokasi sedang berjalan. Silahkan cek proses.</h4>');
                    //$('#btnalok').prop("disabled", false);
                    console.log('Simpan Alokasi is Running.');
                }
                $.unblockUI();
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) { $.unblockUI(); }
        });
    });

</script>

