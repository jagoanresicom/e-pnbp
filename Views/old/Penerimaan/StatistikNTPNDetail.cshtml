@model Dictionary<int, Pnbp.Entities.StatistikNTPNDetail>

<style type="text/css">
    td.numeric, th.numeric {
        text-align: right;
    }

    .back-to-top {
        cursor: pointer;
        position: fixed;
        bottom: 20px;
        right: 20px;
        display: none;
    }
</style>

<script src="../resources/js/infiniteScroll.js"></script>

<div class="">
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Detail Statistik NTPN</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="table-responsive" style="border:none">
                        <section id="flip-scroll">
                            <table class="table table-striped table-bordered infinite-scroll">
                                <thead>
                                    <tr>
                                        <th style="text-align:center;">No.</th>
                                        <th style="text-align:center;">Kode Billing</th>
                                        <th style="text-align:center;">NTPN</th>
                                        <th style="text-align:center;">Jumlah</th>
                                    </tr>
                                </thead>
                                <tbody id="detailplaceholder">
                                    @{Html.RenderAction("ShowDetailNTPNRows", new { pKantorId = Request.Params["pKantorId"] });}
                                </tbody>
                            </table>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" title="Click to return on the top page" data-toggle="tooltip" data-placement="left"><span class="glyphicon glyphicon-chevron-up"></span></a>

<script type="text/javascript">
    $(document).ready(function () {
        $.unblockUI();

        $(window).scroll(function () {
            if ($(this).scrollTop() > 50) {
                $('#back-to-top').fadeIn();
            } else {
                $('#back-to-top').fadeOut();
            }
        });
        // scroll body to 0px on click
        $('#back-to-top').click(function () {
            $('#back-to-top').tooltip('hide');
            $('body,html').animate({
                scrollTop: 0
            }, 800);
            return false;
        });

        $('#back-to-top').tooltip('show');

        resetInfiniteScroll();
    });

    moreRowsUrl = '@Url.Action("ShowDetailNTPNRows", "Laporan", new { pKantorId = Request.Params["pKantorId"] })';
    $(window).scroll(scrollHandler);
</script>
