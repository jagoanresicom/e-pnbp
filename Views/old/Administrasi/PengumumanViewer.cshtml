<div class="modal-header" style="text-align:left;">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class='fa fa-times'></i> </button>
    <h2 class="modal-title" id="myModalLabel">Pengumuman</h2>
</div>

<div class="x_panel" style="border:0px;">
    <div class="x_content">
        <div class="col-md-12 col-sm-12 col-xs-12" id="docViewer" style="min-height:1px;"></div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $.unblockUI();

        $.ajax({
            url: '@Url.Action("GetPengumumanText", "Administrasi")',
            success: function (response) {
                $('#docViewer').html(response);
            },
            error: function (response) {
                $.unblockUI();
            }
        });
    });
</script>