@model Pnbp.Entities.FindPengumuman

<script src='@Url.Content("~/resources/js/infiniteScroll.js")'></script>

<div class="" id="dynamic_content">
    <div class="page-title">
        <div class="title_left"><h2 style="width:100%">Entri Data Pengumuman</h2></div>
        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel" style="padding-top:20px">
                <div class="x_title">
                    <h2>Pencarian Data Pengumuman</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form class="form-horizontal form-label-left" id="frmCariPengumuman" method="post">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Mulai Tanggal : </label>
                            <div class="col-md-3 col-sm-3 col-xs-12">
                                <div class='input-group date' id='tglMulai' style="margin-bottom: 0px;">
                                    @Html.TextBoxFor(model => model.TanggalMulai, new { @class = "form-control", @id = "ftanggalmulai" })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Sampai Tanggal : </label>
                            <div class="col-md-3 col-sm-3 col-xs-12">
                                <div class='input-group date' id='tglBerakhir' style="margin-bottom: 0px;">
                                    @Html.TextBoxFor(model => model.TanggalBerakhir, new { @class = "form-control", @id = "ftanggalberakhir" })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Judul Berita : </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.TextBoxFor(model => model.JudulBerita, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Isi Berita : </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.TextBoxFor(model => model.IsiBerita, new { @class = "form-control" })
                            </div>
                        </div>
                        @*<div class="ln_solid"></div>*@
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button id="save-btn" type="submit" class="btn btn-success">Cari</button>
                                <button id="reset-btn" type="reset" class="btn btn-warning">Reset</button>
                                <button id="create-btn" type="button" class="btn btn-primary">Buat Baru</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <div class="table-responsive">
                        <table id="eventsTable" class="table table-striped table-bordered infinite-scroll" style="width:100%">
                            <thead>
                                <tr>
                                    <th style="text-align:right;">No.</th>
                                    <th style="text-align:center;">Mulai Tanggal</th>
                                    <th style="text-align:center;">Sampai Tanggal</th>
                                    <th>Judul Berita</th>
                                    <th>Isi Berita</th>
                                    <th style="text-align:center;">Entri</th>
                                    <th style="text-align:center;">Hapus</th>
                                </tr>
                            </thead>
                            <tbody id="dataplaceholder"></tbody>
                        </table>
                    </div>
                    @Html.Partial("_Loading")
                </div>
            </div>
        </div>
    </div>

</div>

<div id='myModalBerkasBaru' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" title="" data-toggle="tooltip" data-placement="left"><span class="glyphicon glyphicon-chevron-up"></span></a>

<script type="text/javascript">
    $(function () {
        $("div#loading").hide();
    });

