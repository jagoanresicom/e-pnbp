
@{
    ViewBag.Judul = "Data Rincian Biaya";
    var data = ViewBag.get_data;
}

<style>
    td.numeric, th.numeric {
        text-align: right;
    }

    .tdcenter {
        text-align: center;
    }
</style>

<div class="">
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel" style="padding-top:20px">
                <div class="x_title">
                    <h2 class="sub-header">@(ViewBag.Judul)</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up" title="Hide Form"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_content">
                            <form class="form-horizontal form-label-left" id="frmQueryBeritaAcara" role="form" method="post" enctype="multipart/form-data">
                                <div class="row">
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered infinite-scroll" id="tablenomenklatur" style="width: 100%">
                                                <thead>
                                                    <tr>
                                                        <th class="text-center">No</th>
                                                        <th class="text-center">Tarif</th>
                                                        <th class="text-center">Nama</th>
                                                        <th class="text-center">Nilai Operasional</th>
                                                        <th class="text-center">Tipe Nilai Operasional</th>
                                                        <th class="text-center">Kode Operasional</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (data.Count > 0)
                                                    {
                                                        var no = 1;
                                                        foreach (var row in data)
                                                        {
                                                            <tr>
                                                                <td class="text-center">@no</td>
                                                                <td class="text-right">@row.tarif.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                                                <td class="text-left">@row.nama</td>
                                                                <td class="text-right">@row.nilaioperasional.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                                                <td class="text-left">@row.tipenilaioperasional</td>
                                                                <td class="text-left">@row.kodepenerimaan</td>
                                                            </tr>
                                                            no++;
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#tablenomenklatur').DataTable();
</script>

