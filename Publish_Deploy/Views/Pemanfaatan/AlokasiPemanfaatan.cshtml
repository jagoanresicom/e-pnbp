@model Pnbp.Entities.DataPaguAlokasi

<style>
    td.numeric, th.numeric {
        text-align: right;
    }

    .editors {
        display: none;
    }

    /*tr:hover,*/
    tr.selected, tr.selected {
        background-color: #B0BED9 !important;
    }
</style>

<div class="">
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2 class="sub-header">Daftar Alokasi Pemanfaatan</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="table-responsive" style="border:none">
                        <section id="flip-scroll">
                            @if (@OtorisasiUser.GetJenisKantorUser() == "Pusat")
                            {
                                <table class="table table-bordered dt-responsive nowrap" style="clear: both; border-collapse: collapse; width: 100%;">
                                    <caption><b style="letter-spacing:3px; word-spacing:5px; color:#1abb9c">NASIONAL</b></caption>
                                    <tr>
                                        <th colspan="2" style="text-align:center;">Operasional</th>
                                        <th colspan="2" style="text-align:center;">Non Operasional</th>
                                        <th rowspan="2" style="text-align:center; vertical-align:middle;">Persentase</th>
                                        <th rowspan="2" style="text-align:center; vertical-align:middle;">Belum Alokasi</th>
                                    </tr>
                                    <tr>
                                        <th style="text-align:center;">Pagu</th>
                                        <th style="text-align:center;">Alokasi</th>
                                        <th style="text-align:center;">Pagu</th>
                                        <th style="text-align:center;">Alokasi</th>
                                    </tr>
                                    <tr>
                                        <td class="numeric">@Model.paguAlokasiNasional.PaguOps.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                        <td class="numeric">@Model.paguAlokasiNasional.AlokasiOps.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                        <td class="numeric">@Model.paguAlokasiNasional.PaguNonOps.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                        <td class="numeric">@Model.paguAlokasiNasional.AlokasiNonOps.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                        <td class="numeric">@Model.paguAlokasiNasional.PersentaseString</td>
                                        <td class="numeric">@Model.paguAlokasiNasional.BelumAlokasi.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                    </tr>
                                </table>
                            }

                            <table class="table table-bordered dt-responsive nowrap" style="clear: both; border-collapse: collapse; width: 100%;">
                                <caption><b style="letter-spacing:3px; word-spacing:5px; color:#1abb9c">SATKER</b></caption>
                                <tr>
                                    <th rowspan="2" style="text-align:center; vertical-align:middle;">No.</th>
                                    <th rowspan="2" style="text-align:center; vertical-align:middle;">Nama Satker</th>
                                    <th colspan="2" style="text-align:center;">Operasional</th>
                                    <th colspan="2" style="text-align:center;">Non Operasional</th>
                                    <th rowspan="2" style="text-align:center; vertical-align:middle;">Persentase</th>
                                    <th rowspan="2" style="text-align:center; vertical-align:middle;">Belum Alokasi</th>
                                </tr>
                                <tr>
                                    <th style="text-align:center;">Pagu</th>
                                    <th style="text-align:center;">Alokasi</th>
                                    <th style="text-align:center;">Pagu</th>
                                    <th style="text-align:center;">Alokasi</th>
                                </tr>
                                <tbody>
                                    @foreach (var item in Model.ListPaguAlokasiProvinsi)
                                    {
                                        <tr style="cursor: pointer" onclick="showalokasi('@item.KantorId', '@item.NamaProvinsi')">
                                            <td class="numeric">@item.Rownums.ToString("N0", new System.Globalization.CultureInfo("id-ID")).</td>
                                            <td class="normal">@(item.NamaProvinsi)</td>
                                            <td class="numeric">@item.PaguOps.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                            <td class="numeric">@item.AlokasiOps.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                            <td class="numeric">@item.PaguNonOps.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                            <td class="numeric">@item.AlokasiNonOps.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                            <td class="numeric">@item.PersentaseString</td>
                                            <td class="numeric">@item.BelumAlokasi.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                        </tr>
                                    }

                                    <tr>
                                        <td class="numeric"></td>
                                        <td class="myLabelContentRight">Total</td>
                                        <td class="myLabelContentRight">@Model.ListPaguAlokasiProvinsi.Sum(a => a.PaguOps).ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                        <td class="myLabelContentRight">@Model.ListPaguAlokasiProvinsi.Sum(a => a.AlokasiOps).ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                        <td class="myLabelContentRight">@Model.ListPaguAlokasiProvinsi.Sum(a => a.PaguNonOps).ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                        <td class="myLabelContentRight">@Model.ListPaguAlokasiProvinsi.Sum(a => a.AlokasiNonOps).ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                        <td class="myLabelContentRight">@Math.Round((Model.ListPaguAlokasiProvinsi.Sum(a => a.TotalAlokasi) / Model.ListPaguAlokasiProvinsi.Sum(a => a.TotalPagu) * 100), 2) %</td>
                                        <td class="myLabelContentRight">@Model.ListPaguAlokasiProvinsi.Sum(a => a.BelumAlokasi).ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                                    </tr>
                                </tbody>
                            </table>

                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var showalokasi = function (i, n) {
        $.blockUI({ message: '<div style=\"padding:10px\"><b>Sedang proses... </b><p>harap tunggu</p></div>' });
        $.pjax({
            container: "#right_col",
            type: 'POST',
            url: '@Url.Action("AlokasiPemanfaatanDetail", "Pemanfaatan")',
            data: ({ Id: i, Nama: n }),
            success: function (data, textStatus, XMLHttpRequest) {
                $('#right_col').html(data);
                $.unblockUI();
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                $.unblockUI();
            }
        });
    }
</script>
