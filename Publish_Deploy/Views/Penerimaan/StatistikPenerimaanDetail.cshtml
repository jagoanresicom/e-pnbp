@model List<Pnbp.Entities.StatistikPenerimaan>

@{
    ViewBag.Judul = "Statistik Penerimaan Satker";
}

<style>
    td.numeric, th.numeric {
        text-align: right;
    }

    .tdcenter {
        text-align: center;
    }
</style>

@*<link href='@Url.Content("~/resources/css/table.css")' rel="stylesheet">*@

<table class="table table-striped table-bordered dt-responsive nowrap" style="clear: both; border-collapse: collapse; width: 100%;">
    <thead>
        <tr>
            <th class="tdcenter">No.</th>
            @*<th class="tdcenter">Nama Satker</th>*@
            <th class="tdcenter">Jenis Penerimaan</th>
            <th class="tdcenter">Kode Penerimaan</th>
            <th class="tdcenter">Penerimaan</th>
            <th class="tdcenter">Operasional</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="numeric">@item.urutan</td>
                @*<td>@item.nama</td>*@
                <td>@item.jenispenerimaan</td>
                <td class="tdcenter">@item.kodepenerimaan</td>
                <td class="numeric">@item.penerimaan.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                <td class="numeric">@item.operasional.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
            </tr>
        }

        <tr>
            <td class="numeric">#</td>
            <td colspan="2" style="text-align:right;">Total</td>
            <td class="numeric">@Model.Sum(a => a.penerimaan).ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
            <td class="numeric">@Model.Sum(a => a.operasional).ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
        </tr>
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $.unblockUI();
    });
</script>