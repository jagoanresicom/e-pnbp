@model List<Pnbp.Entities.DetailRekapAlokasiRows>

<style>
    td.numeric, th.numeric {
        text-align: right;
    }

    .tdcenter {
        text-align: center;
    }
</style>

@*<link href='@Url.Content("~/resources/css/table.css")' rel="stylesheet">*@

<table class="table table-striped table-bordered dt-responsive nowrap" style="clear: both; border-collapse: collapse; width: 100%;">
    <thead>
        <tr>
            <th class="tdcenter">No.</th>
            <th class="tdcenter">Nama Satker</th>
            <th class="tdcenter">Nama Program</th>
            <th class="tdcenter">Nilai Anggaran</th>
            <th class="tdcenter">Nilai Alokasi</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="numeric">@item.urutan</td>
                <td>@item.namakantor</td>
                <td>@item.namaprogram</td>
                <td class="numeric">@item.nilaianggaran.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
                <td class="numeric">@item.nilaialokasi.ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
            </tr>
        }

        <tr>
            <td class="numeric">#</td>
            <td colspan="2" style="text-align:right;">Total</td>
            <td class="numeric">@Model.Sum(a => a.nilaianggaran).ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
            <td class="numeric">@Model.Sum(a => a.nilaialokasi).ToString("N0", new System.Globalization.CultureInfo("id-ID"))</td>
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $.unblockUI();
    });
</script>