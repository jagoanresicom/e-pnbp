@{
    ViewBag.Judul = "Data Nomenklatur";
    var data = ViewBag.get_data;
}

<style>
    td.numeric, th.numeric {
        text-align: right;
    }

    .tdcenter {
        text-align: center;
    }
</style>

<div class="">
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel" style="padding-top:20px">
                <div class="x_title">
                    <h2 class="sub-header">@(ViewBag.Judul)</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up" title="Hide Form"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_content">
                            <form class="form-horizontal form-label-left" id="frmQueryBeritaAcara" role="form" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="form-group pull-right">
                                        <a href="@Url.Action("Create", "Satkernomenklatur")" class="btn btn-primary"><i class="fa fa-plush"></i>Tambah Data</a>
                                        <a href="@Url.Action("Import", "Satkernomenklatur")" class="btn btn-success" id="hapus"><i class="fa fa-plush"></i>Import Data</a>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered infinite-scroll" id="tablenomenklatur" style="width: 100%">
                                                <thead>
                                                    <tr>
                                                        <th class="text-center">No</th>
                                                        <th class="text-center">Kode Kantor</th>
                                                        <th class="text-center">Kode Satker</th>
                                                        <th class="text-center">Nama Satker</th>
                                                        <th class="text-center">Tahun</th>
                                                        <th class="text-center">Aksi</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        var no = 1;
                                                        foreach (var row in data)
                                                        {
                                                            <tr>
                                                                <td class="text-center">@no</td>
                                                                <td>@row.kode</td>
                                                                <td>@row.kodesatker</td>
                                                                <td>@row.nama_satker</td>
                                                                <td>@row.tahun</td>
                                                                <td class="text-center">
                                                                    <a href="@Url.Action("detail")?kantorId=@row.kantorid" class="" data-toggle="tooltip" data-placement="top" title="" data-original-title="Detail Data"><i class="fa fa-file-text"></i></a>
                                                                    <a href="@Url.Action("update")?kantorId=@row.kantorid" class="" data-toggle="tooltip" data-placement="top" title="" data-original-title="Ubah Data"><i class="fa fa-pencil-square-o"></i></a>
                                                                    <a href="@Url.Action("delete")?kantorId=@row.kantorid" class="" data-toggle="tooltip" data-placement="top" title="" data-original-title="Hapus Data"><i class="fa fa-times-circle"></i></a>
                                                                </td>
                                                            </tr>
                                                            no++;
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#tablenomenklatur').DataTable();
</script>

