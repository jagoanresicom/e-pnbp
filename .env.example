# PNBP Application Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ASPNET_ENVIRONMENT=Production
TZ=Asia/Jakarta

# Application URLs
APP_BASE_URL=http://localhost
SERVICE_BASE_URL=http://localhost:85/api/Document/

# =============================================================================
# ORACLE DATABASE SETTINGS  
# =============================================================================
# Oracle Connection String for Docker
ORACLE_CONNECTION_STRING=User Id=pnbp;Password=pnbp;Data Source=(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=oracle-db)(PORT=1521))(CONNECT_DATA=(SERVICE_NAME=ORCLPDB1)));

# Oracle Database Configuration
ORACLE_SID=ORCLCDB
ORACLE_PDB=ORCLPDB1
ORACLE_PWD=OraclePassword123
INIT_SGA_SIZE=2048
INIT_PGA_SIZE=1024
ORACLE_CHARACTERSET=AL32UTF8

# Schema Names
SCHEMA_PNBP=pnbp
SCHEMA_KKP=kkpwebdev

# =============================================================================
# REDIS CACHE SETTINGS
# =============================================================================
REDIS_CONNECTION_STRING=redis-cache:6379,password=RedisPassword123
REDIS_PASSWORD=RedisPassword123

# =============================================================================
# KEYCLOAK AUTHENTICATION
# =============================================================================
KEYCLOAK_REALM=internal-realm
KEYCLOAK_CLIENT_ID=dotnet-web
KEYCLOAK_CLIENT_SECRET=2b0106ef-a5e5-4c62-bab6-abab773cc7e6
KEYCLOAK_URL=http://10.20.59.235:8080/auth
LOCAL_KEYCLOAK_URL=http://10.20.59.235:8080/auth

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
TAHUN_ANGGARAN=2024
PROFILE_BIRO_PERENCANAAN=C1010000
PROFILE_BIRO_KEUANGAN=C1020000

# Cookie Configuration
COOKIE_DOMAIN=http://localhost/
REDIRECT_URI=http://localhost/
COOKIE_NAME=atrbpn

# Environment
ENVIRONMENT=Development

# Excel Export
EXCEL_NAME_MONITORING=Monitoring_

# =============================================================================
# DOCKER SPECIFIC SETTINGS
# =============================================================================
# Container resource limits
PNBP_APP_MEMORY=2G
PNBP_APP_CPU=1.0
ORACLE_DB_MEMORY=4G
ORACLE_DB_CPU=2.0
REDIS_MEMORY=512M

# Network settings
DOCKER_NETWORK_SUBNET=172.20.0.0/16

